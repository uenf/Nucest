<% content_for :principal_content do %>
  <table class="lista_de_itens" id="lista_de_usuarios">
    <thead>
      <tr>
        <th>Email</th>
        <th class="manipulators"></th>
      </tr>
    </thead>
    <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%=h usuario.email %></td>
        <td class="manipulators">
          <%= link_to 'Exibir', usuario %>
          <%= link_to 'Editar', edit_usuario_path(usuario) %>
          <%= link_to 'Excluir', usuario, :confirm => "Tem certeza que deseja deletar #{usuario.email}?", :method => :delete %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

