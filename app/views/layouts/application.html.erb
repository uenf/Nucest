<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">

<html>

<head>
  <title>Nucest</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'jquery.fixedheadertable.min', 'jquery.maskedinput.js' %>
  <%= csrf_meta_tag %>
  <%= yield :head %>

  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
</head>

<%= yield :script %>

<body>
<div id="wrapper">

<!-- ADMIN PANEL BEGIN -->
  <div id="admin_panel_wrapper">
    <div id="admin_panel">

      <!-- BREADCRUMBS BEGIN -->
      <ul id="breadcrumbs">
        <li class="home"><a href="#"><strong>Principal</strong></a></li>
        <%= raw breadcrumbs(:separator => '') %>
      </ul>
      <!-- BREADCRUMBS END -->

      <!-- USER STATUS BEGIN -->
      <p id="user_status">
        <% if usuario_signed_in? %>
          <%= current_usuario.email %><br />
          <%= link_to "Logout", destroy_usuario_session_path %>
        <% else %>
          <%= link_to "Login", new_usuario_session_path %>
        <% end %>
      </p>
      <!-- USER STATUS END -->

    </div>

    <br class="clear" />
  </div>
<!-- ADMIN PANEL END -->

<!-- FLASH MESSAGES BEGIN -->
  <ul id="flash_messages">
  <% flash.each do |name, msg| %>
    <%= content_tag(:li, msg, :class => name) if msg.is_a?(String) %>
  <% end %>
  </ul>
<!-- FLASH MESSAGES END -->

<!-- HEADER BEGIN -->
  <div id="header_wrapper">
    <div id="header">
    </div>
  </div>
<!-- HEADER END -->

<!-- MAIN MENU BEGIN -->
  <div id="main_menu_wrapper">
    <ul id="main_menu">
      <%=t li_link_to "Instituições", instituicoes_path %>
      <%=t li_link_to "Áreas de estágio", areas_path %>
      <%=t li_link_to "Estagiários", estagiarios_path %>
      <%=t li_link_to "Usuários", usuarios_path, :class => 'users' %>
    </ul>

    <br class="clear" />
  </div>
<!-- MAIN MENU END -->

<!-- CONTENT BEGIN -->
  <div id="content_wrapper">
    <div id="content">

      <!-- SUBMENU BEGIN -->
      <%= yield :submenu %>
      <!-- SUBMENU END -->

      <!-- MAIN ACTIONS BEGIN -->
      <div id="main_actions">
        <%= yield :main_actions %>

        <br class="clear" />
      </div>
      <!-- MIN ACTIONS END -->

      <!-- MAIN CONTENT BEGIN -->
      <div id="main_content">
        <%= yield :main_content %>
      </div>
      <!-- MAIN CONTENT END -->

      </br class="clear">
    </div>
  </div>
<!-- CONTENT END -->

<%= yield :datepicker %>

</div>
</body>
</html>

