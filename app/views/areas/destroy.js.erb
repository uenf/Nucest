  <% if @pai %>
    <% if Area.where('father_id = ?', @pai).empty? %>
      $('.tree li[data-id="<%= @pai %>"]').attr('class', 'empty');
    <% end %>
  <% end %>
  $('.tree li[data-id="<%= @area.id %>"]').remove();
<% end %>

fade_flash();
<% flash.delete(:error)
   flash.delete(:notice)
%>

