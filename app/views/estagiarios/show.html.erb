<h1>Exibindo <%= @estagiario.nome %></h1>
  </br>
  <table>
    <thead>
		  <tr>
			  <th colspan="2">Dados acadêmicos</th>
		  </tr>
	  </thead>

	  <tbody id="dados_do_estagiario">
      <tr>
        <th class="label">Matrícula</th>
        <td><%=h @estagiario.matricula %></td>
      </tr>

      <tr>
        <th class="label">Matrícula GRH</th>
        <td><%=h @estagiario.matricula_grh %></td>
