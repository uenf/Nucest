      <tr>
        <th class="label">Título de eleitor</th>
        <td><%=h @estagiario.titulo_de_eleitor %></td>
      </tr>
      </tr>
	  </tbody>
  </table>

  <table>
    <thead>
		  <tr>
			  <th colspan="2">Endereço</th>
		  </tr>
	  </thead>
	  <tbody id="endereco_do_estagiario">
      <tr>
        <th class="label">Estado</th>
        <td><%=h @estagiario.estado %></td>
      </tr>

      <tr>
        <th class="label">Cidade</th>
