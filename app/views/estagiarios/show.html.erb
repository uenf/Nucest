	    <tr>
        <th class="label">Curso</th>
        <td><%=h @estagiario.curso %></td>
      </tr>

	    <tr>
        <th class="label">Tempo de curso</th>
        <td><%=h @estagiario.tempo_de_curso + "º " + @estagiario.formato_do_tempo_de_curso %></td>
      </tr>

      <tr>
        <th class="label">Situação da matrícula</th>
        <td><%=h @estagiario.cpf %></td>
      </tr>

      <tr>
        <th class="label">Escolaridade</th>
        <td><%=h @estagiario.escolaridade %></td>
      </tr>
	  </tbody>
  </table>

  <table>
