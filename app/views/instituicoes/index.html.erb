<% content_for :main_content do %>
  <%= form_for @search do |f| %>
    <div class="right">
      <%= f.text_field :nome_contains %>
      <%= f.submit "Pesquisar" %>
    </div>
    <br class="clear"/>
  <div id="instituicoes"><%= render 'tabela_instituicoes' %></div>
  <% end %>
<% end %>

<% content_for :main_actions do %>
  <ul class="actions right">
    <li><%= link_to 'Cadastrar instituição', new_instituicao_path %></li>
  </ul>
<% end %>

