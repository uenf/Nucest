<table id="lista_de_convenios">
  <thead>
    <tr>
      <th>Id</th>
      <th>Tipo</th>
      <th>Início</th>
      <th>Fim</th>
      <th>Situação</th>
      <th></th>
      <th class="actions"></th>
    </tr>
  </thead>

  <tbody>
  <% @convenios.each do |convenio| %>
    <tr>
      <td><%= link_to "##{convenio.id}", edit_instituicao_convenio_path(@instituicao, convenio) %></td>
      <td><%=h Convenio::TIPO.key(convenio.tipo) %></td>
      <td><%=h convenio.inicio_br %></td>
      <td><%=h convenio.fim_br %></td>
      <td>
        <span class="<%= Convenio::SITUACAO.key(convenio.situacao).parameterize %>">
          <%=h Convenio::SITUACAO.key(convenio.situacao) %>
        </span>
      </td>
      <td class="buttons">
        <a href="#" class="show_tramitacao_window button" id="<%= convenio.id %>" onclick="visualizarTramitacao('<%= convenio.id %>')">Tramitação</a>
        <%= link_to 'Gerar termo de convênio', gerar_termo_convenio_path(@instituicao, convenio), :class => 'button' %>
      </td>
      <td class="actions">
        <%= link_to 'Editar', edit_instituicao_convenio_path(@instituicao, convenio) %>
        <%= link_to 'Excluir', instituicao_convenio_path(@instituicao, convenio),
              :confirm => "Tem certeza que deseja deletar o convênio ##{convenio.id}?",
              :method => :delete,
              :class => 'delete' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

