<% content_for :principal_content do %>
  <table class="lista_de_itens" id="lista_de_supervisores">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Lotação</th>
        <th>Telefone</th>
        <th>Celular</th>
        <th>E-mail</th>
        <th class="manipulators"></th>
      </tr>
    </thead>
    <tbody>
    <% @supervisores.each do |supervisor| %>
      <tr>
        <td><%=h supervisor.nome %></td>
        <td><%=h supervisor.lotacao %></td>
        <td><%=h supervisor.telefone %></td>
        <td><%=h supervisor.celular %></td>
        <td><%=h supervisor.email %></td>
        <td class="manipulators">
          <%= link_to 'Exibir', instituicao_supervisor_path(@instituicao, supervisor) %>
          <%= link_to 'Editar', edit_instituicao_supervisor_path(@instituicao, supervisor) %>
          <%= link_to 'Excluir', instituicao_supervisor_path(@instituicao, supervisor), :confirm => "Tem certeza que deseja deletar #{supervisor.nome}?", :method => :delete %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<% content_for :side_bar do %>
  <ul class="side_bar_menu">
    <li><%= link_to 'Cadastrar supervisor', new_instituicao_supervisor_path %></li>
  </ul>
<% end %>

