<%= simple_form_for([@instituicao, @representante]) do |f| %>
  <%= f.input :nome %>
  <%= f.input :funcao, :label => 'Função' %>

  <fieldset>
    <legend>Documentos</legend>
    <%= f.input :rg, :label => 'RG' %>
    <%= f.input :orgao_expedidor, :label => 'Órgão expedidor' %>
    <%= f.input :cpf, :label => 'CPF', :input_html => { :class => 'mask-cpf'} %>
  </fieldset>

  <fieldset>
    <legend>Contato</legend>
    <%= f.input :telefone, :input_html => { :class => 'mask-telefone'} %>
    <%= f.input :celular, :input_html => { :class => 'mask-telefone'} %>
    <%= f.input :email, :label => 'E-mail' %>
  </fieldset>

  <div class="actions">
    <%= f.submit 'Salvar', :name => 'salvar'  %>
    <%= f.submit 'Salvar e cadastrar convênio', :name => 'salvar_cadastrar_convenio' %>
    <%= f.submit 'Salvar e cadastrar outro', :name => 'salvar_cadastrar_representante' %>
  </div>
<% end %>

